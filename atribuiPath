#!/bin/bash

adicionaPath(){
	# BINFABRICPATH=$(pwd)/fabricSamples/fabric-samples/bin
	# PATH="${PATH:+${PATH}:${BINFABRICPATH}}"	
	echo "export PATH=$(pwd)/fabricSamples/fabric-samples/bin:$PATH" >> ~/.bashrc
	echo "Adicionado ao path, abra um novo terminal para as mudan√ßas fazer efeito"
	#source ~/.bashrc
}


clear
if [[ -d "fabricSamples" ]]; then
	echo "Samples do Hyperladger Fabric encontrados, continuando..."
	echo "Obs executar esse script como rooto HLF ao path"
	echo "Deseja atribuir ao path ? (s / n)"

		read simounao
	if [ "$simounao" == s ]; then
		adicionaPath
	fi
else
	echo  "Diretorio dos samples do hyperledger Fabric nao encontrados, favor executar o script install" 

fi

